{{! Previous/next page links - only displayed on page 2+ }}
<div class="extra-pagination inner">
    {{pagination templateName="pagination-lookahead"}}
</div>

{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}" style="width:1000px;max-width:1000px;">
    <header class="post-header">
        <h2 class="post-title"><a href="{{image}}">{{{title}}}</a></h2>
    </header>
    <section class="post-excerpt" style="height:400px;">
        <object data="{{image}}" type="application/pdf" width="100%" height="100%">
        </object>
    </section>
    <a href="{{image}}">Download PDF</a>
    <footer class="post-meta">
        <time class="post-date" style="border-left:none;"datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
    </footer>
</article>
{{/foreach}}

